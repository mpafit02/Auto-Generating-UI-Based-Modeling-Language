{
    "description": "Book Store",
    "type": "object",
    "required": ["Person", "Book", "Transactions"],
    "properties": {
        "Person": {
            "id": "#/properties/Person",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Person"
            }
        },
        "Book": {
            "id": "#/properties/Book",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Book"
            }

        },
        "Transactions": {
            "id": "#/properties/Transactions",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Transactions"
            }
        }
    },
    "definitions": {
        "Person": {
            "required": [
                "name",
                "surname",
                "surname",
                "age",
                "student",
                "address"
            ],
            "name": {
                "type": "string"
            },
            "surname": {
                "type": "string"
            },
            "age": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
            },
            "student": {
                "type": "boolean"
            },
            "address": {
                "$ref": "#/definitions/address"
            }
        },
        "address": {
            "id": "#/definitions/address",
            "type": "object",
            "required": [
                "city",
                "street",
                "street-number"
            ],
            "properties": {
                "city": {
                    "type": "string",
                    "enum": [
                        "Nicosia",
                        "Limassol",
                        "Pafos",
                        "Larnaca",
                        "Keryneia",
                        "Famagusta"
                    ]
                },
                "street": {
                    "type": "string"
                },
                "street-number": {
                    "type": "number"
                }
            }
        },
        "Book": {
            "properties": {
                "code": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "Book": {
                    "items": {
                        "$ref": "#/definitions/Book"
                    }
                }
            }
        },
        "Transactions": {
            "properties": {
                "date": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/definitions/date"
                    }
                },
                "time": {
                    "type": "string"
                },
                "pay-method": {
                    "type": "object",
                    "oneOf": [{
                            "$ref": "#/definitions/credit-card"
                        },
                        {
                            "$ref": "#/definitions/cash"
                        }
                    ]
                }
            }
        },
        "date": {
            "required": [
                "day",
                "month",
                "year"
            ],
            "properties": {
                "day": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 31
                },
                "month": {
                    "type": "string",
                    "enum": [
                        "January",
                        "February",
                        "March",
                        "April",
                        "May",
                        "June",
                        "July",
                        "August",
                        "September",
                        "October",
                        "November",
                        "December"
                    ]
                },
                "year": {
                    "type": "number"
                }
            }
        },
        "cash": {
            "required": [
                "amount"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                }
            }
        },
        "credit-card": {
            "required": [
                "card-number"
            ],
            "properties": {
                "card-number": {
                    "type": "string"
                }
            }
        }
    }
}