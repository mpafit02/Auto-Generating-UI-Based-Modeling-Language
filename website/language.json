{
    "id": "monitoring-elasticity-schema.json",
    "$schema": "",
    "description": "Insight Developing Tool",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "Insights"
    ],
    "properties": {
        "Insights": {
            "id": "#/properties/Insights",
            "type": "array",
            "additionalProperties": false,
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/Insight"
            }
        }
    },
    "definitions": {
        "Insight": {
            "id": "#/definitions/Insight",
            "required": [
                "Salience",
                "Compute",
                "Interval"
            ],
            "properties": {
                "Salience": {
                    "type": "number",
                    "minimum": 0
                },
                "Confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                },
                "Sample": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                },
                "Compute": {
                    "$ref": "#/definitions/CompositeExpression"
                },
                "Interval": {
                    "$ref": "#/definitions/Window"
                }
            }
        },
        "CompositeExpression": {
            "id": "#/definitions/CompositeExpression",
            "type": "object",
            "additionalProperties": false,
            "oneOf": [{
                    "$ref": "#/definitions/CompositeExpressionType"
                },
                {
                    "$ref": "#/definitions/Expression"
                }
            ]
        },
        "CompositeExpressionType": {
            "id": "#/definitions/CompositeExpressionType",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "lhside",
                "operation",
                "rhside"
            ],
            "properties": {
                "lhside": {
                    "$ref": "#/definitions/CompositeExpression"
                },
                "operation": {
                    "$ref": "#/definitions/BinOp"
                },
                "rhside": {
                    "$ref": "#/definitions/CompositeExpression"
                },
                "WHEN": {
                    "$ref": "#/definitions/Filter"
                }
            }

        },
        "BinOp": {
            "id": "#/definitions/BinOp",
            "enum": [
                "ADD",
                "MUL",
                "SUB",
                "DIV"
            ]
        },
        "Expression": {
            "id": "#/definitions/Expression",
            "type": "object",
            "additionalProperties": false,
            "oneOf": [{
                    "$ref": "#/definitions/ExpressionType"
                },
                {
                    "type": "number"
                }
            ]
        },
        "ExpressionType": {
            "id": "#/definitions/ExpressionType",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "Aggregate-Members"
            ],
            "properties": {
                "MapOp": {
                    "$ref": "#/definitions/MapOp"
                },
                "Aggregate-Members": {
                    "oneOf": [{
                            "$ref": "#/definitions/Aggregate"
                        },
                        {
                            "$ref": "#/definitions/Members"
                        }
                    ]
                },
                "WHEN": {
                    "$ref": "#/definitions/Filter"
                }
            }
        },
        "Aggregate": {
            "id": "#/definitions/Aggregate",
            "type": "object",
            "additionalProperties": false,
            "oneOf": [{
                    "$ref": "#/definitions/AggregateWindowedFunc"
                },
                {
                    "$ref": "#/definitions/AggregateAccumFunc"
                }
            ]
        },
        "AggregateWindowedFunc": {
            "id": "#/definitions/AggregateWindowedFunc",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "WindowedFunc",
                "Window",
                "Members"
            ],
            "properties": {
                "WindowedFunc": {
                    "$ref": "#/definitions/WindowedFunc"
                },
                "Window": {
                    "$ref": "#/definitions/Window"
                },
                "Members": {
                    "$ref": "#/definitions/Members"
                }
            }
        },
        "AggregateAccumFunc": {
            "id": "#/definitions/AggregateAccumFunc",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "AccumFunc",
                "Members"
            ],
            "properties": {
                "AccumFunc": {
                    "$ref": "#/definitions/AccumFunc"
                },
                "Members": {
                    "$ref": "#/definitions/Members"
                }
            }
        },
        "WindowedFunc": {
            "id": "#/definitions/WindowedFunc",
            "type": "object",
            "oneOf": [{
                    "Function": {
                        "enum": [
                            "SUM",
                            "PRODUCT",
                            "ARITHMETICMEAN",
                            "GEOMETRICMEAN",
                            "MIN",
                            "MAX",
                            "VARIANCE",
                            "SDEV",
                            "MEDIAN",
                            "MODE"
                        ]
                    }
                },
                {
                    "Percentile": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                    }
                }
            ]
        },
        "Members": {
            "id": "#/definitions/Members",
            "type": "object",
            "required": [
                "Metric"
            ],
            "properties": {
                "Metric": {
                    "$ref": "#/definitions/Metric"
                },
                "Clusters": {
                    "$ref": "#/definitions/Clusters"
                }
            }
        },
        "Metric": {
            "id": "#/definitions/Metric",
            "type": "string"
        },
        "Clusters": {
            "id": "#/definitions/Clusters",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/Cluster"
            }
        },
        "Cluster": {
            "id": "#/definitions/Cluster",
            "type": "string"
        },
        "Filter": {
            "id": "#/definitions/Filter",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "RelOp",
                "CompositeExpression",
                "Filters"
            ],
            "properties": {
                "RelOp": {
                    "$ref": "#/definitions/RelOp"
                },
                "CompositeExpression": {
                    "$ref": "#/definitions/CompositeExpression"
                },
                "Filter": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Filter"
                    }
                }
            }
        },
        "RelOp": {
            "id": "#/definitions/RelOp",
            "enum": [
                ">",
                "<",
                "<=",
                ">=",
                "==",
                "!="
            ]
        },
        "Window": {
            "id": "#/definitions/Window",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "Duration",
                "TimePeriod"
            ],
            "properties": {
                "Duration": {
                    "type": "number",
                    "minimum": 1
                },
                "TimePeriod": {
                    "$ref": "#/definitions/TimePeriod"
                }
            }
        },
        "TimePeriod": {
            "id": "#/definitions/TimePeriod",
            "enum": [
                "MILLISECONDS",
                "SECONDS",
                "MINUTES",
                "HOURS"
            ]
        },
        "AccumFunc": {
            "id": "#/definitions/AccumFunc",
            "type": "object",
            "oneOf": [{
                    "RUNNING": {
                        "enum": [
                            "RUNNING_SDEV",
                            "RUNNING_MEAN",
                            "RUNNING_MAX",
                            "RUNNING_MIN"
                        ]
                    }
                },
                {
                    "EWMA": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                    }
                },
                {
                    "PEWMA": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                    }
                }
            ]
        },
        "MapOp": {
            "id": "#/definitions/MapOp",
            "enum": [
                "ABS",
                "SQRT",
                "SQUARE"
            ]
        }
    }
}