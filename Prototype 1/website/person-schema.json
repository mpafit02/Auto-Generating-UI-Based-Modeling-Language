{
    "description": "Book Store",
    "type": "object",
    "required": ["Person", "Book", "Transactions"],
    "properties": {
        "Person": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "surname": {
                    "type": "string"
                },
                "age": {
                    "description": "Age in years",
                    "type": "integer",
                    "minimum": 0
                },
                "address": {
                    "type": "object",
                    "items": {
                        "$ref": "#/properties/Person/definitions/address"
                    }
                }
            },
            "definitions": {
                "address": {
                    "required": [
                        "city",
                        "street",
                        "number"
                    ],
                    "properties": {
                        "city": {
                            "type": "string",
                            "enum": [
                                "Nicosia",
                                "Limassol",
                                "Pafos",
                                "Larnaca",
                                "Keryneia",
                                "Famagusta"
                            ]
                        },
                        "street": {
                            "tpye": "string"
                        },
                        "number": {
                            "tpye": "number"
                        }
                    }
                }
            },
            "required": ["name", "surname"]
        },
        "Book": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                }
            }
        },
        "Transactions": {
            "type": "object",
            "properties": {
                "person": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "object"
                    }
                },
                "book": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "object"
                    }
                },
                "time": {
                    "type": "integer"
                }
            }
        }
    }
}