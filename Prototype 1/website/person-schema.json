{
    "description": "Book Store",
    "type": "object",
    "required": ["Person", "Book", "Transactions"],
    "properties": {
        "Person": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "surname": {
                    "type": "string"
                },
                "age": {
                    "description": "Age in years",
                    "type": "number",
                    "minimum": 0
                },
                "address": {
                    "type": "object",
                    "items": {
                        "$ref": "#/properties/Person/definitions/address"
                    }
                },
                "student": {
                    "type": "boolean"
                }
            },
            "definitions": {
                "address": {
                    "required": [
                        "city",
                        "street",
                        "number"
                    ],
                    "properties": {
                        "city": {
                            "type": "string",
                            "enum": [
                                "Nicosia",
                                "Limassol",
                                "Pafos",
                                "Larnaca",
                                "Keryneia",
                                "Famagusta"
                            ]
                        },
                        "street": {
                            "type": "string"
                        },
                        "number": {
                            "type": "number"
                        }
                    }
                }
            },
            "required": ["name", "surname"]
        },
        "Book": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                }
            }
        },
        "Transactions": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "$ref": "#/properties/Transactions/definitions/date"
                    }
                },
                "time": {
                    "type": "string"
                },
                "pay-method": {
                    "items": {
                        "type": "object",
                        "minProperties": 1,
                        "oneOf": [{
                                "$ref": "#/properties/Transactions/definitions/credit-card"
                            },
                            {
                                "$ref": "#/properties/Transactions/definitions/cash"
                            }
                        ]
                    }
                }
            },
            "definitions": {
                "date": {
                    "required": [
                        "day",
                        "month",
                        "year"
                    ],
                    "properties": {
                        "day": {
                            "type": "number",
                            "minimum": 1,
                            "maximum": 31
                        },
                        "month": {
                            "type": "string",
                            "enum": [
                                "January",
                                "February",
                                "March",
                                "April",
                                "May",
                                "June",
                                "July",
                                "August",
                                "September",
                                "October",
                                "November",
                                "December"
                            ]
                        },
                        "year": {
                            "type": "number"
                        }
                    }
                },
                "cash": {
                    "required": [
                        "amount"
                    ],
                    "properties": {
                        "amount": {
                            "type": "number"
                        }
                    }
                },
                "credit-card": {
                    "required": [
                        "card-number"
                    ],
                    "properties": {
                        "card-number": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}